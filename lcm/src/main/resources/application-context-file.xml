<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xmlns:util="http://www.springframework.org/schema/util"
	xmlns:mongo="http://www.springframework.org/schema/data/mongo"
        xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/util 
        http://www.springframework.org/schema/util/spring-util.xsd 
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">
        
        <import resource="classpath*:/application-context.xml" />
                
        <context:component-scan base-package="nl.kpmg.lcm.server" />
        
        <bean id="objectMapper" class="nl.kpmg.lcm.server.data.dao.file.ObjectMapperFactory" factory-method="createInstance" />

        <!-- DAOs -->
        <bean id="metaDataDao" class="nl.kpmg.lcm.server.data.dao.file.MetaDataDaoImpl">
            <constructor-arg index="0" type="java.lang.String" value="${lcm.server.storage.file.path}/metadata" />
        </bean>
        <bean id="taskDescriptionDao" class="nl.kpmg.lcm.server.data.dao.file.TaskDescriptionDaoImpl">
            <constructor-arg index="0" type="java.lang.String" value="${lcm.server.storage.file.path}/taskdescription" />
        </bean>
        <bean id="taskScheduleDao" class="nl.kpmg.lcm.server.data.dao.file.TaskScheduleDaoImpl">
            <constructor-arg index="0" type="java.lang.String" value="${lcm.server.storage.file.path}/taskschedule" />
        </bean>
        <bean id="storageDao" class="nl.kpmg.lcm.server.data.dao.file.StorageDaoImpl">
            <constructor-arg index="0" type="java.lang.String" value="${lcm.server.storage.file.path}/storage" />
        </bean>
        <bean id="userDao" class="nl.kpmg.lcm.server.data.dao.file.UserDaoImpl">
            <constructor-arg index="0" type="java.lang.String" value="${lcm.server.storage.file.path}/users" />
        </bean>
        
        <bean id="userGroupDao" class="nl.kpmg.lcm.server.data.dao.file.UserGroupDaoImpl">
            <constructor-arg index="0" type="java.lang.String" value="${lcm.server.storage.file.path}/userGroups" />
        </bean>
        
        <!-- Services -->
        <bean id="metaDataService" class="nl.kpmg.lcm.server.data.service.MetaDataService" />
        <bean id="storageService" class="nl.kpmg.lcm.server.data.service.StorageService" />
        <bean id="encryptDecryptService" class="nl.kpmg.lcm.server.data.service.EncryptDecryptService" />
        <bean id="userService" class="nl.kpmg.lcm.server.data.service.UserService">
        	<property name="userDao" ref="userDao"/>
        </bean>
        <bean id="userGroupService" class="nl.kpmg.lcm.server.data.service.UserGroupService">
        	<property name="userGroupDao" ref="userGroupDao"/>
        </bean>  
        
        <bean id="sessionAuthenticationManager" class="nl.kpmg.lcm.server.rest.authentication.SessionAuthenticationManager" />
        <bean id="basicAuthenticationManager" class="nl.kpmg.lcm.server.rest.authentication.BasicAuthenticationManager" />
</beans>