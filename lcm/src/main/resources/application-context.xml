<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xmlns:util="http://www.springframework.org/schema/util"
	xmlns:mongo="http://www.springframework.org/schema/data/mongo"
        xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/util 
        http://www.springframework.org/schema/util/spring-util.xsd 
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">
        
	<!-- bean definitions here -->
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
            <property name="ignoreUnresolvablePlaceholders" value="true" />
            <property name="ignoreResourceNotFound" value="true" />
            <property name="locations">
                <list>
                    <value>classpath:application.properties</value>
                    <value>file:config/application.properties</value>
                </list>
            </property>
	</bean>
        
        <bean id="configuration" class="nl.kpmg.lcm.server.Configuration">
            <property name="serverName" value="${lcm.server.name}"/>
            <property name="serverPort" value="${lcm.server.port}"/>
            <property name="serverStorage" value="${lcm.server.storage}"/>
        </bean>
        <bean id="encryption" class="org.jasypt.encryption.pbe.StandardPBEStringEncryptor">
        	<property name="password" value="${lcm.server.password}"/>
        </bean>
        <bean id="authenticationManager" class="nl.kpmg.lcm.server.AuthenticationManager" scope="prototype">        	
            <property name="userService" ref="userService"/>
            <property name="serviceKeyKey" value="${lcm.server.serviceKey.key}"/>
            <property name="serviceKeyValue" value="${lcm.server.serviceKey.value}"/>
            <property name="authorizationTokenKey" value="${lcm.server.authorizationToken.key}"/>
            <property name="authorizationTokenValue" value="${lcm.server.authorizationToken.value}"/>
            <property name="adminUser" value="${lcm.server.adminUser}"/>
            <property name="adminPassword" value="${lcm.server.adminPassword}"/>             
        </bean>
</beans>